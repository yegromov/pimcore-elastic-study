<!DOCTYPE html>
<html lang="ru">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
		<title>ElasticSearch Sample</title>
	</head>

	<body>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<h1>Railcars list</h1>
					<h2>Search</h2>
					<form method="post">
					{#
						{% if(filterDefinition.filters|length > 0) %}
							{% for filter in filterDefinition.filters %}
								{% set filterMarkup = filterService.filterFrontend(filter, productListing, currentFilter) %}
								{{ filterMarkup | raw  }}
							{% endfor %}
						{% endif %}
					#}
						<input type="search" placeholder="Search" name="searchValue" id="searchValue">
						<input type="submit" class="btn btn-primary" value="Search">
					</form>
				</div>
				<div class="col-12">
					{% if railcars is defined %}
						<table class="table-stiped table-bordered">
							<tr>
								<th>Model</th>
								<th>Railcar Name</th>
								<th>Factory</th>
							</tr>
							{% for railcar in railcars %}
								<tr>
									<td>{{ railcar.model|e }}</td>
									<td>{{ railcar.name|e }}</td>
									<td>{{ railcar.factory }}</td>
								</tr>
							{% endfor %}
						</table>
					{% else %}
						<p>No railcars found</p>
					{% endif %}
				</div>
			</div>
		</div>
	</body>
</html>
